{
    "compilerOptions": {
        "outDir": "./built",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}